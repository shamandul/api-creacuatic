<%- include ('../partials/_header.ejs') -%>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <% if(data.length > 0) { %>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Titular</th>
                        <th>Descripción</th>
                        <th>Likes</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                        <% for(var i= 0;i < data.length; i++) {%>
                            <tr>
                                <td><%= data[i].titular %></td>
                                <td><%= data[i].descripcion %></td>
                                <td><%= data[i].likes %></td>
                                <td>
                                    <a href="/noticias/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                                    <a href="/noticias/update/<%= data[i].id %>" class="btn btn-info">Actualizar</a>
                                </td>
                            </tr>
                        <% } %>
                </tbody>
            </table>
            <% }else{ %>
                <div class="img-noticias"></div>
            <% } %>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/noticias/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="titular" class="form-control" placeholder="Titular">
                        </div>
                        <div class="form-group">
                            <input type="text" name="descripcion" class="form-control" placeholder="Descripción">
                        </div>
                        <div class="form-group">
                            <input type="text" name="likes" class="form-control" placeholder="Número de likes">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Guardar noticia</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include ('../partials/_footer.ejs') -%>
