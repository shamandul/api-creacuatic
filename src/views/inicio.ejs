<%- include ('partials/_header.ejs') -%>
<div class="container">
  <div class="row">
    <div class="col-md-8 img-admin mt-5 d-flex">
      <div class="container text-center my-auto">
        <h1>Creacuatic Api</h1>
      </div>
    </div>
    <% if(user) { %>
    <div class="col-md-4">
      <div class="mt-5">
        <h4 class="text-center">Bienvenido a Creacuatic API</h4>
        <p class="text-center"><%= user.username %></p>
        <a href="/usuario/logout" class="btn btn-primary btn-block"
          >Cerrar sesión</a
        >
      </div>
      <div class="img-security"></div>
    </div>
    <% } else { %>
    <div class="col-md-4">
      <div class="card mt-5">
        <div class="card-body">
          <form action="/usuario/signin" method="POST">
            <div class="form-group">
              <input
                type="text"
                name="username"
                class="form-control"
                placeholder="Usuario"
              />
            </div>
            <div class="form-group">
              <input
                type="password"
                name="password"
                class="form-control"
                placeholder="Contraseña"
              />
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary">
                Inicio sesión
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
<%- include ('partials/_footer.ejs') -%>
